# The site wide list of rethinkdb servers

# The list of servers where rethinkdb serve will run.
[rethinkdb_serve_hosts]
rethinkdb1 ansible_ssh_host=1.1.1.1 rethinkdb_cluster_port=29015
rethinkdb2 ansible_ssh_host=1.1.1.2 rethinkdb_cluster_port=29025 
rethinkdb3 ansible_ssh_host=1.1.1.3 rethinkdb_cluster_port=29035
rethinkdb4 ansible_ssh_host=1.1.1.4 rethinkdb_cluster_port=29045

# Global options for rethinkdb_serve_hosts.
[rethinkdb_serve_hosts:vars]
rethinkdb_cluster=true
rethinkdb_sshtunnel=true
rethinkdb_bind=127.0.0.1
rethinkdb_instance_name=instance0
rethinkdb_directory=/data/rethinkdb

# The list of servers where rethinkdb proxy will run.
[rethinkdb_proxy_hosts]
api1 ansible_ssh_host=2.2.2.1
api2 ansible_ssh_host=2.2.2.2

# Global options for rethinkdb_proxy_hosts.
[rethinkdb_proxy_hosts:vars]
rethinkdb_cluster=true
rethinkdb_sshtunnel=true

# All rethinkdb server
[rethinkdb_all_hosts:children]
rethinkdb_serve_hosts
rethinkdb_proxy_hosts